<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	
	<include
		resource="org/springframework/boot/logging/logback/base.xml" />
		
	<logger name="org.springframework.web" level="OFF" />
		
	<appender name="apppender-experiment"
		class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy
			class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>../logs/traffic-experiment-data-%d{yyyy-MM-dd}.log
			</fileNamePattern>
		</rollingPolicy>
		<encoder>
			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
		</encoder>
	</appender>
	
	<appender name="CONSOLE"
		class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%msg%n</pattern>
		</encoder>
	</appender>
	
	<logger name="com.microthingsexperiment" level="INFO" additivity="true">
		<appender-ref ref="apppender-experiment" />
	</logger>
	<logger name="com.smarttrafficprototype" level="INFO" additivity="true">
		<appender-ref ref="apppender-experiment" />
	</logger>
</configuration>